        package-name="com.fantasybaby.domain">
    <xml-schema
            namespace="http://www.example.com/customer"
            element-form-default="QUALIFIED"/>
    <java-types>
        <java-type name="PhoneNumber">
            <xml-root-element/>
            <xml-type name="PhoneNumber" prop-order="type number" />
            <java-attributes>
                <!--<xml-attribute java-attribute="lastName" name="last-name" />-->
                <xml-element java-attribute="type" name="type"/>
                <xml-element java-attribute="number" name="value"/>
                <!--<xml-value java-attribute="type"/>
                <xml-value java-attribute="value"/>-->
            </java-attributes>
        </java-type>
        <java-type name="Customer" >
            <xml-type prop-order="firstName lastName address phoneNumbers" />
            <java-attributes>
                <xml-attribute java-attribute="firstName" name="first-name" xml-key="true"/>
                <xml-attribute java-attribute="lastName" name="last-name" xml-key="true"/>
                <xml-element   java-attribute="phoneNumbers" xml-path="" />
