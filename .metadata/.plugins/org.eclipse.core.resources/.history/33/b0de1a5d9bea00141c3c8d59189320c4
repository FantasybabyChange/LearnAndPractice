package com.fantasybaby.classloader;

import java.io.UnsupportedEncodingException;

public class ConvertCode {
	public static void main(String[] args) throws UnsupportedEncodingException {  // TODO Auto-generated method stub
		String s = "姬米娜我爱你";
		try {
			byte[] b = s.getBytes();
			String str = " ";
			for (int i = 0; i < b.length; i++) {
				Integer I = new Integer(b[i]);
				String strTmp = I.toBinaryString((b[i]));
				if (strTmp.length() > 2)
					strTmp = strTmp.substring(strTmp.length() - 2);
				str = str + strTmp;
			}
			System.out.println(str.toUpperCase());
		} catch (Exception e) {
			e.printStackTrace();
		}}
	public String changeToBinaryCode(String str){
		byte[] b = str.getBytes();
		for (int i = 0; i < b.length; i++) {
			Integer I = new Integer(b[i]);
			String strTmp = I.toBinaryString((b[i]));
			if (strTmp.length() > 2)
				strTmp = strTmp.substring(strTmp.length() - 2);
			str = str + strTmp;
		}
		return str;
	}
	public String changeBinaryStrToString(String str){
		byte[] b = str.getBytes();
		StringBuffer sb = new StringBuffer();
		for (int i = 0; i < b.length; i++) {
			char j = (char)Integer.parseInt(str.substring(i,i+2), 2);                  
	        sb.append(new Character(j).toString());                  
