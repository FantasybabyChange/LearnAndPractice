package com.fantasybaby.classloader;

import java.io.UnsupportedEncodingException;

public class ConvertCode {
	public static String changeToBinaryCode(String str) throws UnsupportedEncodingException{
		StringBuffer sb = new StringBuffer();
		  char[] chars = str.toCharArray();
		  for(int i = 0;i < chars.length;i++)
		  {
			  sb.append( "67" + Integer.toOctalString((int) chars[i]));
		  }
		return sb.toString();
	}
	public static String changeBinaryStrToString(String str){
		  String[] unicode = str.split("67"); // 第一个是空白字符，忽略
		  StringBuffer sb = new StringBuffer(unicode.length - 1);
		  for(int i = 1;i < unicode.length;i++)
			  sb.append((char) Integer.parseInt(unicode[i],8));
		return sb.toString();
	}
}
